<div class='h3'>出張の内容</div>
<div class='table-responsive'>
  <table class='table'>
      <tr>
        <th><%= f Employee, :name %></th>
        <td><%= @schedule.employee.name %></td>
      </tr>
      <tr>
        <th><%= f Schedule, :date %></th>
        <td><%= @schedule.date %></td>
      </tr>
      <tr>
        <th><%= f Schedule, :days %></th>
        <td><%= @schedule.days %></td>
      </tr>
      <tr>
        <th><%= f Schedule, :destination %></th>
        <td><%= @schedule.destination %></td>
      </tr>
      <tr>
        <th><%= f Schedule, :daily_allowance %></th>
        <td><%= number_with_delimiter @schedule.daily_allowance%>円</td>
      </tr>
      <tr>
        <th><%= f Schedule, :accommodation_charges %></th>
        <td><%= number_with_delimiter @schedule.accommodation_charges%>円</td>
      </tr>
      <tr>
        <th><%= f Schedule, :trip_expense_total %></th>
        <td><%= number_with_delimiter @schedule.trip_expenses.sum(:price)%>円</td>
      </tr>
      <tr>
        <th><%= f Schedule, :total %></th>
        <td><%= number_with_delimiter @schedule.total%>円</td>
      </tr>
      <tr>
        <th><%= f Company, :name %></th>
        <td><%= @schedule.employee.company.name %></td>
      </tr>
  </table>
</div>

