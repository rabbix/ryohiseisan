<label class="col-sm-3 control-label radio_buttons optional"><%= f DailyAllowance%></label>
<div class="col-sm-9">
  <% daily_allowances.each do |daily_allowance|%>
    <span class="radio">
      <label for="schedule_daily_allowance_id_<%=daily_allowance.id%>">
        <%= radio_button_tag "schedule[daily_allowance_id]", daily_allowance.id, daily_allowance.id == daily_allowance_id, class: 'radio_buttons optional', id: "schedule_daily_allowance_id_#{daily_allowance.id}"%>
        <%= daily_allowance.name %> (日帰り <%= number_to_currency daily_allowance.one_day_allowance %> / 宿泊日 <%= number_to_currency daily_allowance.accommodation_day_allowance %> / 帰着日 <%= number_to_currency daily_allowance.return_day_allowance %>)
      </label>
    </span>
  <% end %>
</div>
